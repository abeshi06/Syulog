<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Call</th>
      <th>Status</th>
      <th>Photo</th>
      <th>Whatday</th>
      <th>Date</th>
      <th>Favolite</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.call %></td>
        <td><%= item.status %></td>
        <td><%= item.photo %></td>
        <td><%= item.whatday %></td>
        <td><%= item.date %></td>
        <td><%= item.favolite %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

